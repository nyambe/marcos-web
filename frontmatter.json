{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.startCommand": "npm run dev",
  "frontMatter.preview.host": "localhost:3000",
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.framework.id": "nuxt",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.git.enabled": true,
  "frontMatter.custom.scripts": [
    {
      "title": "Obtener datos youtube",
      "script": ".frontmatter/scripts/get-youtube-data-from-id.js",
      "command": "~/.nvm/versions/node/v16.15.1/bin/node"
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "path": "[[workspace]]/content/blog",
      "title": "blog"
    },
    {
      "path": "[[workspace]]/content/navegacion/cabecera",
      "title": "Items menú cabecera"
    },
    {
      "path": "[[workspace]]/content/youtube",
      "title": "Videos venta youtube"
    },
    {
      "path": "[[workspace]]/content/galeria",
      "title": "Inspiración y diseño"
    }
  ],
  "frontMatter.taxonomy.tags": [],
  "frontMatter.taxonomy.categories": [],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "image",
          "name": "image",
          "type": "string"
        },
        {
          "title": "youtube",
          "name": "youtube",
          "type": "string"
        },
        {
          "title": "alt",
          "name": "alt",
          "type": "string"
        },
        {
          "title": "width",
          "name": "width",
          "type": "datetime"
        },
        {
          "title": "height",
          "name": "height",
          "type": "datetime"
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        }
      ]
    },
    {
      "name": "youtube",
      "pageBundle": false,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "slug",
          "name": "slug",
          "type": "slug"
        },
        {
          "title": "image",
          "name": "image",
          "type": "string",
          "isPreviewImage": false
        },
        {
          "title": "alt",
          "name": "alt",
          "type": "string"
        },
        {
          "title": "width",
          "name": "width",
          "type": "number"
        },
        {
          "title": "height",
          "name": "height",
          "type": "number"
        },
        {
          "title": "youtube",
          "name": "youtube",
          "type": "string"
        },
        {
          "name": "etiquetas",
          "type": "tags",
          "title": "tags",
          "taxonomyLimit": 5
        },
        {
          "title": "categorias",
          "name": "categorias",
          "type": "tags",
          "taxonomyLimit": 3
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "datetime"
        },
        {
          "title": "lastmod",
          "name": "lastmod",
          "type": "datetime"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "datetime"
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.content.snippets": {
    "Título y video": {
      "description": "Introduccir el titulo y el video de youtube",
      "body": [
        "## [[&title]]",
        "",
        ":youtube{ id=\"[[youtube]]\" }",
        ""
      ],
      "fields": [
        {
          "name": "youtube",
          "title": "Id de youtube",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Image snippet": {
      "description": "Image with caption",
      "body": "{{< caption src=\"[[&mediaUrl]]\" caption=\"[[caption]]\" class=\"[[className]]\" >}}",
      "isMediaSnippet": true,
      "fields": [
        {
          "name": "className",
          "title": "Class name",
          "type": "string",
          "default": "image__caption"
        }
      ]
    }
  }
}